#include<stdio.h>
int main()
{
    int mat[4][4],i,j;
    int sum=0;
    int sumd1=0,sumd2=0;
    printf("Enter the elements of the matrix:\n");
    for(i=0;i<4;i++)
    {
        for(j=0;j<4;j++)
        {
            printf("Element %d%d: ",i+1,j+1);
            scanf("%d",&mat[i][j]);
        }
    }

    printf("the matrix is:\n");
    for(i=0;i<4;i++)
    {
        for(j=0;j<4;j++)
        {
            printf("%d\t", mat[i][j]);
        }
        printf("\n");
    }

    for(i=0;i<4;i++)
    {
        for(j=0;j<4;j++)
        {
            sum=sum+mat[i][j];
        }
    }

    for(i=0;i<4;i++)
    {
            sumd1=sumd1+mat[i][i];
    }
    for(i=0;i<4;i++)
    {
        for(j=3;j>=0;j--)
        {
           sumd2=mat[0][3]+mat[1][2]+mat[2][1]+mat[3][1];
        }

    }




    printf("The sum of all elements=%d\n",sum);
    printf("The sum of diagonal 1=%d\n",sumd1);
    printf("The sum of diagonal 2=%d\n",sumd2);
    printf("The sum of both the diagonals are=%d",sumd1+sumd2);


    return 0;
}


